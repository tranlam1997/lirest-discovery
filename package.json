{
  "name": "lirest-registry",
  "version": "0.1.0",
  "description": "Lirest Registry",
  "private": true,
  "licenses": [
    {
      "type": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  ],
  "main": "src/main.ts",
  "engines": {
    "node": ">= 16.x",
    "pnpm": ">= 7.x"
  },
  "scripts": {
    "check-env": "node -e 'console.log(process.env)' | grep npm",
    "debug": "node --inspect -r ts-node/register -r tsconfig-paths/register src/main.ts",
    "debug:prod": "node --inspect dist/main.js",
    "debug:watch": "nodemon --exec node --inspect -r ts-node/register -r tsconfig-paths/register src/main.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage --forceExit --detectOpenHandles --runInBand",
    "prepare": "husky install && husky add .husky/pre-commit \"lint-staged\"",
    "prebuild": "rimraf dist",
    "build": "tsc -b ./tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "build:swc": "swc src -d dist && sh ./scripts/copy-resources.sh",
    "start": "ts-node -r tsconfig-paths/register .",
    "start:prod": "node dist/main.js",
    "start:dev": "tsnd --respawn --clear --transpile-only -r tsconfig-paths/register . --ignore-watch \"src/**/*.spec.ts\" node_modules",
    "swc:dev": "swc src -d dist --source-maps --watch",
    "watch-dev": "nodemon --watch \"dist/**/*\" -e js ./dist/main.js",
    "dev": "concurrently \"pnpm run swc:dev\" \"sh ./scripts/copy-resources.sh\" \"pnpm run watch-dev\""
  },
  "keywords": [],
  "author": "Tran Tuan Lam",
  "email": "lam.tttech19@gmail.com",
  "license": "ISC",
  "dependencies": {
    "@sinclair/typebox": "^0.25.21",
    "@tranlam1997/lirest-internal-communication-service": "0.2.10",
    "@types/swagger-jsdoc": "^6.0.1",
    "cls-hooked": "^4.2.2",
    "concurrently": "^7.6.0",
    "config": "^3.3.7",
    "cross-var": "^1.1.0",
    "express": "^4.18.2",
    "express-basic-auth": "^1.2.1",
    "express-winston": "^4.2.0",
    "lightship": "^7.1.1",
    "mongoose": "^6.9.0",
    "mongoose-paginate-v2": "^1.7.1",
    "ms": "^2.1.3",
    "nodemon": "^2.0.19",
    "openapi-types": "^12.1.0",
    "reflect-metadata": "^0.1.13",
    "request-ip": "^3.3.0",
    "rimraf": "^3.0.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.4.0",
    "tsconfig-paths": "^3.14.1",
    "winston": "^3.7.2",
    "winston-daily-rotate-file": "^4.7.1",
    "winston-transport": "^4.5.0"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.59",
    "@swc/core": "^1.3.31",
    "@types/cls-hooked": "^4.3.3",
    "@types/config": "^0.0.41",
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.0.0",
    "@types/ms": "^0.7.31",
    "@types/node": "^17.0.30",
    "@types/request-ip": "^0.0.37",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "chokidar": "^3.5.3",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^7.0.4",
    "jest": "^29.0.2",
    "prettier": "^2.6.2",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.7.0",
    "ts-node-dev": "^1.1.8",
    "tsc-alias": "^1.7.0",
    "typescript": "^4.6.3"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --cache --fix",
      "prettier --write"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.spec.ts"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "test/**/*.ts",
      "!**/node_modules/**"
    ],
    "testEnvironment": "node",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover"
    ],
    "verbose": true,
    "moduleNameMapper": {
      "^@src/(.*)$": "<rootDir>/src/$1",
      "^@test/(.*)$": "<rootDir>/test/$1"
    }
  }
}
